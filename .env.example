# =============================================================================
# DJANGO CONFIGURATION
# =============================================================================

# SECURITY WARNING: Keep the secret key used in production secret!
# Generate a new one with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=django-insecure-CHANGE-THIS-IN-PRODUCTION

# SECURITY WARNING: don't run with debug turned on in production!
DEBUG=True

# Comma-separated list of allowed hosts
# Example: ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com
ALLOWED_HOSTS=localhost,127.0.0.1

# Django settings module to use
# Options: config.settings.development, config.settings.production
DJANGO_SETTINGS_MODULE=config.settings.development

# =============================================================================
# DATABASE CONFIGURATION (PostgreSQL - Optional)
# =============================================================================
# Uncomment and configure if using PostgreSQL in production
# DB_NAME=portfolio_db
# DB_USER=portfolio_user
# DB_PASSWORD=your_secure_password
# DB_HOST=localhost
# DB_PORT=5432

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================

# Email backend (console for development, smtp for production)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# SMTP Settings (for production)
EMAIL_HOST=smtp.gmail.com
EMAIL_HOST_USER=your_email@gmail.com
EMAIL_HOST_PASSWORD=your_app_specific_password
EMAIL_PORT=587
EMAIL_USE_TLS=True

# Default email addresses
DEFAULT_FROM_EMAIL=your_email@gmail.com
CONTACT_EMAIL=your_email@gmail.com

# =============================================================================
# PORTFOLIO SETTINGS
# =============================================================================

# GitHub username for portfolio
PORTFOLIO_GITHUB_USERNAME=Kallheset

# Pagination
PAGINATION_PAGE_SIZE=12

# =============================================================================
# CACHE CONFIGURATION (Redis - Optional)
# =============================================================================
# Uncomment if using Redis for caching
# REDIS_URL=redis://127.0.0.1:6379/1

# =============================================================================
# SECURITY SETTINGS (Production Only)
# =============================================================================

# SSL/HTTPS Settings
# SECURE_SSL_REDIRECT=True
# SECURE_HSTS_SECONDS=31536000
# SECURE_HSTS_INCLUDE_SUBDOMAINS=True
# SECURE_HSTS_PRELOAD=True

# =============================================================================
# ADMIN SETTINGS
# =============================================================================

# Admin contact information for error notifications
ADMIN_NAME=Argenis Manzanares
ADMIN_EMAIL=argenis010@gmail.com

# =============================================================================
# NOTES
# =============================================================================
# 1. Copy this file to .env and fill in the actual values
# 2. Never commit the .env file to version control
# 3. For production, generate a new SECRET_KEY
# 4. For Gmail, use an App Password: https://support.google.com/accounts/answer/185833
# 5. Set DEBUG=False in production
